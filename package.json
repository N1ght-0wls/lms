{
	"name": "awesome-lms",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build": "nx run-many -t build",
		"dev": "concurrently -n \"client,server\" -c \"cyan,green\" \"pnpm run client:dev\" \"pnpm run server:dev\"",
		"start": "nx run-many -t start",
		"client:dev": "nx run client:dev",
		"server:dev": "nx run server:dev",
		"db:build": "nx run @awesome-lms/db:build",
		"db:generate": "nx run @awesome-lms/db:generate",
		"db:build:generate": "pnpm db:build && pnpm db:generate",
		"db:push": "nx run @awesome-lms/db:push",
		"shared:build": "nx run @awesome-lms/shared:build",
		"lint": "eslint .",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"keywords": [
		"lms"
	],
	"author": "Night Owls Team",
	"license": "MIT",
	"engines": {
		"node": ">=20.x.x"
	},
	"lint-staged": {
		"**/*.{js,ts,tsx}": [
			"eslint --fix"
		],
		"**/*": "prettier --write --ignore-unknown"
	},
	"type": "module",
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@eslint/js": "^9.13.0",
		"concurrently": "^9.0.1",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"globals": "^15.11.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"nx": "^20.0.6",
		"prettier": "^3.3.3",
		"typescript-eslint": "^8.11.0"
	}
}
